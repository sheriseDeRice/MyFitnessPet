<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/default_background_day"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="1dp"
        android:textColor="@color/Black"
        android:textSize="9pt"
        android:text="@string/today_s_date_and_current_time"
        android:fontFamily="casual"
        android:textStyle="bold"
        tools:targetApi="jelly_bean" />

    <TextView
        android:id="@+id/testStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/thePet"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="140dp"
            android:adjustViewBounds="false"
            android:background="@android:color/transparent"
            android:contentDescription="@string/the_pet_image"
            android:cropToPadding="false"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="100dp"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/babycat_normal" />

        <ImageView
            android:id="@+id/sb_emoji"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/emoji_bubble"
            android:paddingEnd="50dp"
            android:paddingRight="50dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="50dp"
            android:paddingBottom="10dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/speech_bubble" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tamago"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/egg_to_hatch"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/tamago" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>